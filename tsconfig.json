{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                              
    "esModuleInterop": true,                        
    "moduleResolution": "node",
    "resolveJsonModule": true,                      
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,                                 
    "skipLibCheck": true                            
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}